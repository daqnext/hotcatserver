{
    "apps": [{
        "name": "hotcat_center_production",
        "script": "./dist/subapp/centerapp/app.js",
        "args": "['prod_center_config']",
        "cwd": "/root/hotcatserver",
        "ignore_watch": [
            "./dist/cmd/"
        ],
        "instances": "max",
        "exec_mode": "cluster",
        "error_file": "./pm2log/error.log",
        "out_file": "./pm2log/app-out.log",
        "log_date_format": "YYYY-MM-DD HH:mm:ss",
        "restart_delay": 5000
    }]
}